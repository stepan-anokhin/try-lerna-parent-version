{
  "name": "@project/dummy-root",
  "version": "1.0.0",
  "private": true,
  "description": "Dummy root package, for administration purpose only.",
  "author": "Stepan Anokhin",
  "license": "ISC",
  "devDependencies": {
    "lerna": "^6.0.1"
  },
  "scripts": {
    "registry:start": "./scripts/run-verdaccio.sh",
    "registry:stop": "sudo docker stop verdaccio",
    "registry": "npm run registry:start",

    "version:alpha": "lerna version --no-changelog --conventional-commits --conventional-prerelease --preid alpha --yes",
    "version:beta": "lerna version --no-changelog --conventional-commits --conventional-prerelease --no-push --preid beta --yes",
    "version:ga": "lerna version --no-changelog --conventional-commits --conventional-graduate --yes",
    "publish:alpha": "lerna publish from-package --dist-tag dev --yes",
    "publish:beta": "lerna publish from-package --dist-tag next --yes",
    "publish:ga": "lerna publish from-package --yes",
    "release:alpha": "npm run version:alpha && npm run publish:alpha",
    "release:beta": "npm run version:beta && npm run publish:beta",
    "release:ga": "npm run version:ga && npm run publish:ga"
  }
}
